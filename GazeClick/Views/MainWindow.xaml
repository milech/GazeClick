<Window x:Class="GazeClick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gaze Click v1.2" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
        <!--Title="Gaze Click v1.2" Closing="Window_Closing" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">-->
    <Grid Margin="0,0,0,1" Height="250">
        <CheckBox x:Name="showMarkerCheckbox"
                  Content="show marker"
                  HorizontalAlignment="Left"
                  Margin="10,10,0,0"
                  VerticalAlignment="Top"
                  Height="13"
                  Width="90"
                  TabIndex="1"/>
        <CheckBox x:Name="logCheckbox"
                  IsChecked="{Binding Log.IsOn}"
                  Content="register points"
                  HorizontalAlignment="Left"
                  Margin="10,40,0,0"
                  VerticalAlignment="Top"
                  Height="13"
                  Width="126"
                  TabIndex="2"/>
        <CheckBox x:Name="moveCursorCheckbox"
                  Content="control cursor"
                  HorizontalAlignment="Left"
                  Margin="10,70,0,0"
                  VerticalAlignment="Top"
                  IsChecked="False"
                  Height="13"
                  Width="117"
                  TabIndex="3" />
        <CheckBox x:Name="emulateClicksCheckbox"
                  Content="emulate clicks"
                  HorizontalAlignment="Left"
                  Margin="10,100,0,0"
                  VerticalAlignment="Top"
                  IsChecked="False"
                  Height="13"
                  Width="97"
                  TabIndex="4"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Label Content="Click threshold:" HorizontalAlignment="Left" Height="28" Margin="10,127,0,0" VerticalAlignment="Top"/>
            <Slider Value="{Binding GazeTimer.Time}" 
                    Minimum="{Binding GazeTimer.MinTime}"
                    Maximum="{Binding GazeTimer.MaxTime}"
                    x:Name="stareThrSlider"
                    Height="28"
                    Margin="10,0,10,0"
                    VerticalAlignment="Top"
                    SmallChange="10"
                    TickFrequency="100"
                    IsEnabled="True"
                    TabIndex="5"
                    HorizontalAlignment="Center"
                    Width="120"
                    ToolTip="Duration of the gaze fixation that causes a click. Between 500 ms and 5 s."/>
        </StackPanel>
        <Button x:Name="registerButton"
                Content="Register punch-in"
                Height="66"
                Margin="1"
                VerticalAlignment="Bottom"
                TabIndex="6"
                ToolTip="Register a current timestamp and (x, y) coordinates on click" />

